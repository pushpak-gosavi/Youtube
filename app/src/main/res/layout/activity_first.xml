<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtURL"
        android:layout_width="0dp"
        android:layout_height="@dimen/standard_45"
        android:layout_marginLeft="@dimen/standard_10"
        android:layout_marginRight="@dimen/standard_10"
        android:paddingStart="@dimen/standard_10"
        android:paddingEnd="@dimen/standard_10"
        android:background="@drawable/bg_edt_stroke"
        android:layout_marginTop="@dimen/standard_100"
        android:hint="@string/str_edtURL"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnURL"
        android:background="@drawable/bg_button"
        android:layout_marginLeft="@dimen/standard_20"
        android:layout_marginRight="@dimen/standard_20"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/standard_24"
        android:text="@string/str_sendUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtURL" />
</androidx.constraintlayout.widget.ConstraintLayout>